@model ProyectoCloudPyme.Models.Archivo
@{
    ViewBag.Title = "Creacion de Pyme";
    Layout = "~/Views/Shared/_LayoutCloudPymeSesion.cshtml";

}

<html>
<head>
    <title>Carga de archivos</title>
    <link rel="stylesheet" href="~/Content/style.css" />

</head>

<body>
    @if (ViewBag.Message != null)
    {
        <div class="alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    <h3 style="margin-top:40px; color:#191919">Debes subir los siguientes archivos</h3>
    <div class="documentos">
        @using (Html.BeginForm("Save", "Archivo", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-6 col-lg-offset-3">
                    <div class="form-group">
                        @Html.LabelFor(d => d.archivo1)
                        @Html.TextBoxFor(d => d.archivo1, new { @class = "form-control", type = "file", accept = "" })
                        @Html.ValidationMessageFor(d => d.archivo1, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.archivo2)
                        @Html.TextBoxFor(d => d.archivo2, new { @class = "form-control", type = "file", accept = "" })
                        @Html.ValidationMessageFor(d => d.archivo2, "", new { @class = "text-danger" })
                    </div>
              
                    <div class="form-group" style="text-align:right">
                        <input type="submit" class="btn btn-success" value="Guardar">

                    </div>

                </div>
            </div>
        }
    </div>
</body>
</html>
