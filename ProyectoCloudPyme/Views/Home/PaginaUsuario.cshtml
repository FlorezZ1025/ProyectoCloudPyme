@model ProyectoCloudPyme.Models.Usuario
@{
    ViewBag.Title = "Pagina principal";
    Layout = "~/Views/Shared/_LayoutCloudPymeSesion.cshtml";
}

<h2> </h2>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="~/Content/StyleViewPagina.css" />
</head>
<body>
    <h1>Bienvenido @Model.Nombre</h1>
  
    <section id="pantalla-dividida">
        <div class="left" style=" background-color: #C7E6D7; width:800px">
            <div class="content">
                <h1>¿Quieres agregar una Pyme?</h1>
                <a id="texplico" href="@Url.Action("ElegirPyme","Home")">Aquí te explicamos cómo crearla</a>
            </div>
        </div>
        <div class="right" style="width:300px" >
            @if (Model.Pymes.Count == 0)
            {
                <table style="margin-left:50px; margin-right:20px;">
                    <tr>
                        <td colspan="2" style="text-align:center; justify-content:center">Todavía no tienes Pymes agregadas</td>
                    </tr>
                 
                </table>
            }
            else
            {
                <table id="UsuariosTable">
                    <thead>
                        <tr>
                            <th colspan="2" style="text-align:center; justify-content:center">Tus Pymes</th>
                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pyme in Model.Pymes)
                        {
                            <tr>
                                <td>@pyme.Nombre_pyme</td>
                                <td>@pyme.Tipo_pyme</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </section>
  

</body>
</html>