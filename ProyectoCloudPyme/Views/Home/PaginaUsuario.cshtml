@model ProyectoCloudPyme.Models.Usuario
@{
    ViewBag.Title = "Pagina principal";
    Layout = "~/Views/Shared/_LayoutCloudPymeSesion.cshtml";
}

<h2> </h2>
<html>
<head>
    <title></title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            height: 100%;
        }

        #pantalla-dividida {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

            #pantalla-dividida div:nth-of-type(1) {
                flex-grow: 1;
                display: flex;
                flex-direction: column;
                flex-wrap: wrap;
                justify-content: center;
                align-content: center;
                text-align: center;
            }

            #pantalla-dividida div:nth-of-type(2) {
                flex-grow: 1;
                align-items: center;
                justify-content: center;
                flex-wrap: nowrap;
            }

        .contenedor {
            flex-grow: 1;
            background-color: #C7E6D7;
            display: flex;
            flex-direction: row;
        }

        .left {
            flex-grow: 1;
            justify-content: center;
            align-items: center;
        }

        .right {
      
            flex-grow: 1;
            justify-content: center;
            align-items: center;
        }

        .pregunta {
            font-family: "Arial", sans-serif;
            color: #333333;
            font-weight: bold;
            font-size: 32px;
            text-align: center;
        }


        #texplico {
            margin-top: 20px;
            text-align: center;
            border-radius: 5px;
            font-weight: bold;
            color: #F6F0E9;
            font-size: 18px;
            background-color: #0F5F54;
            text-decoration: none;
            padding: 15px;
            text-shadow: 1px 1px 1px #333333;
            box-shadow: 1px 1px 1px #333333;
        }

        #UsuariosTable {
            max-width: 800px; /* Ajusta el valor según tus necesidades */
            margin: 0 auto; /* Centra horizontalmente el contenedor */
        }

        #pantalla-dividida div:nth-of-type(1) h1 {
            margin-top: 20px;
            font-family: "Arial", sans-serif;
            color: #333333;
            font-size: 50px;
            text-align: center;
        }

        td {
            font-family: "Arial", sans-serif;
            color: #0D4C43
        }


        table {
            border-collapse: collapse;
            width: 800px;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            text-align: center;
            padding: 15px;
            text-align: left;
            border-bottom: solid 1px #0D4C43;
            border-right: solid 1px #0D4C43;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

    </style>
</head>
<body>
  
    <div id="pantalla-dividida">
        <div>
            <h1>Bienvenido <span style="font-weight:bold">@Model.Nombre</span></h1>
        </div>
        <div >
            @if (Model.Pymes.Count() == 0)
            {
                <div id="UsuariosTable">
                <table>
                    <tr>
                        <td colspan="2" style="text-align:center; justify-content:center">Todavía no tienes Pymes agregadas</td>
                    </tr>
                 
                </table>
                </div>
                    }
            else
            {
            <div id="UsuariosTable">
                <table >
                    <thead>
                        <tr>
                            <th colspan="2" style="text-align:center; justify-content:center">Tus Pymes</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pyme in Model.Pymes)
                        {
                            <tr>
                                <td>@pyme.Nombre_pyme</td>
                                <td>@pyme.Tipo_pyme</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            }
        </div>
        <div class="contenedor">
            <div class="left" style="flex-grow:1">
                <h1 class="pregunta" style="font-size:32px;">¿Quieres agregar una Pyme?</h1>
                <a id="texplico" href="@Url.Action("ElegirPyme","Home")">Aquí te explicamos cómo crearla</a>
            </div>
            <div class="right" style="flex-grow:1">
                <h1 class="pregunta" style="font-size:32px;  ">¿Ya tienes todo listo?</h1>
                <a id="texplico" href="@Url.Action("CrearPyme","Home") " style="text-align:center">Añade aquí tu <b>Pyme</b></a>
            </div>
        </div>
    </div>
</body>
</html>